<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/up_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <TextView
        android:id="@+id/info_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/up_toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/info_principal"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/name_company"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="italic|bold" />

    <ProgressBar
        android:id="@+id/paso_comp"
        style="?android:attr/progressBarStyle"
        android:layout_width="301dp"
        android:layout_height="323dp"
        android:layout_below="@+id/info_s"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp" />

    <TextView
        android:id="@+id/text_paso"
        android:layout_width="176dp"
        android:layout_height="118dp"
        android:layout_below="@+id/info_s"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="@string/paso_comp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/text_plus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/paso_comp"
        android:layout_marginTop="-26dp"
        android:gravity="center"
        android:text="@string/text_dem"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/extra_data"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_below="@+id/text_plus"
        android:layout_marginTop="17dp"
        android:gravity="center"
        android:text="@string/curious"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <ImageButton
        android:id="@+id/returnButton"
        android:layout_width="70dp"
        android:layout_height="54dp"
        android:background="@color/orange"
        android:contentDescription="@string/return_description"
        app:srcCompat="@mipmap/ic_getout_foreground" />

    <ImageButton
        android:id="@+id/settingsButton"
        android:layout_width="59dp"
        android:layout_height="53dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="3dp"
        android:background="@color/orange"
        android:contentDescription="@string/setting_description"
        app:srcCompat="@mipmap/ic_settings_foreground" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/down_toolbar"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/extra_data"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="47dp"
        android:background="@color/orange"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <ImageButton
        android:id="@+id/homeButton"
        android:layout_width="66dp"
        android:layout_height="54dp"
        android:layout_below="@+id/extra_data"
        android:layout_marginTop="52dp"
        android:background="@color/orange"
        android:contentDescription="@string/icon"
        app:srcCompat="@mipmap/ic_home_foreground"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <ImageButton
        android:id="@+id/mapButton"
        android:layout_width="61dp"
        android:layout_height="62dp"
        android:layout_below="@+id/extra_data"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:background="@color/orange"
        android:contentDescription="@string/icon"
        app:srcCompat="@mipmap/ic_map_foreground"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <ImageButton
        android:id="@+id/groupButton"
        android:layout_width="52dp"
        android:layout_height="64dp"
        android:layout_below="@+id/extra_data"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="8dp"
        android:background="@color/orange"
        android:contentDescription="@string/icon"
        app:srcCompat="@mipmap/ic_group_foreground"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <ImageButton
        android:id="@+id/placesButton"
        android:layout_width="60dp"
        android:layout_height="65dp"
        android:layout_below="@+id/extra_data"
        android:layout_marginStart="90dp"
        android:layout_marginTop="51dp"
        android:background="@color/orange"
        android:contentDescription="@string/icon"
        app:srcCompat="@mipmap/ic_places_foreground"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <ImageButton
        android:id="@+id/plansButton"
        android:layout_width="61dp"
        android:layout_height="64dp"
        android:layout_below="@+id/extra_data"
        android:layout_marginStart="250dp"
        android:layout_marginTop="54dp"
        android:background="@color/orange"
        android:contentDescription="@string/icon"
        app:srcCompat="@mipmap/ic_plans_foreground"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <TextView
        android:id="@+id/home_text"
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/extra_data"
        android:layout_marginTop="115dp"
        android:gravity="center"
        android:text="@string/homeIcon"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/places_text"
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/extra_data"
        android:layout_marginTop="115dp"
        android:layout_marginStart="90dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="@string/placesIcon" />

    <TextView
        android:id="@+id/map_text"
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/extra_data"
        android:layout_marginTop="115dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="@string/mapIcon" />

    <TextView
        android:id="@+id/plans_text"
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/extra_data"
        android:layout_marginStart="250dp"
        android:layout_marginTop="115dp"
        android:gravity="center"
        android:text="@string/plansIcon"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/group_text"
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/extra_data"
        android:layout_marginTop="115dp"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="@string/groupIcon" />

</RelativeLayout>