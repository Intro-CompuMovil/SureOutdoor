<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".PlacesActivity">

    //Default en todas

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/up_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <TextView
        android:id="@+id/name_company"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="italic|bold"/>

    <ImageButton
        android:id="@+id/returnButton"
        android:layout_width="70dp"
        android:layout_height="54dp"
        android:background="@color/orange"
        android:contentDescription="@string/return_description"
        app:srcCompat="@mipmap/ic_getout_foreground" />

    <ImageButton
        android:id="@+id/settingsButton"
        android:layout_width="59dp"
        android:layout_height="53dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="3dp"
        android:background="@color/orange"
        android:contentDescription="@string/setting_description"
        app:srcCompat="@mipmap/ic_settings_foreground" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/down_toolbar"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="47dp"
        android:background="@color/orange"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <ImageButton
        android:id="@+id/homeButton"
        android:layout_width="66dp"
        android:layout_height="54dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="34dp"
        android:background="@color/orange"
        android:contentDescription="@string/icon"
        app:srcCompat="@mipmap/ic_home_foreground"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <ImageButton
        android:id="@+id/mapButton"
        android:layout_width="61dp"
        android:layout_height="62dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:background="@color/orange"
        android:contentDescription="@string/icon"
        app:srcCompat="@mipmap/ic_map_foreground"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <ImageButton
        android:id="@+id/groupButton"
        android:layout_width="52dp"
        android:layout_height="64dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="21dp"
        android:background="@color/orange"
        android:contentDescription="@string/icon"
        app:srcCompat="@mipmap/ic_group_foreground"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <ImageButton
        android:id="@+id/placesButton"
        android:layout_width="60dp"
        android:layout_height="65dp"
        android:layout_marginStart="90dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:background="@color/orange"
        android:contentDescription="@string/icon"
        app:srcCompat="@mipmap/ic_places_foreground"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <ImageButton
        android:id="@+id/chatsButton"
        android:layout_width="61dp"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="250dp"
        android:layout_marginBottom="25dp"
        android:background="@color/orange"
        android:contentDescription="@string/icon"
        app:srcCompat="@mipmap/ic_plans_foreground"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <TextView
        android:id="@+id/home_text"
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="@string/homeIcon"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/places_text"
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="90dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="@string/placesIcon"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/map_text"
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="@string/mapIcon" />

    <TextView
        android:id="@+id/chats_text"
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="250dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="@string/plansIcon" />

    <TextView
        android:id="@+id/group_text"
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="@string/groupIcon" />

    //Parte central
    <TextView
        android:id="@+id/filter_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/up_toolbar"
        android:layout_marginStart="10dp"
        android:textColor="@color/black"
        android:text="@string/filter_text"
        android:textSize="20sp"/>

    <ImageButton
        android:id="@+id/gymButton"
        android:layout_width="49dp"
        android:layout_height="48dp"
        android:layout_below="@+id/up_toolbar"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:background="@color/blue"
        android:contentDescription="@string/gym_icon"
        app:srcCompat="@mipmap/ic_gym_foreground"
        tools:ignore="ImageContrastCheck" />

    <ImageButton
        android:id="@+id/storeButton"
        android:layout_width="49dp"
        android:layout_height="48dp"
        android:layout_below="@+id/up_toolbar"
        android:layout_marginStart="90dp"
        android:layout_marginTop="40dp"
        android:background="@color/red"
        android:contentDescription="@string/strButt"
        app:srcCompat="@mipmap/ic_store_foreground"
        tools:ignore="ImageContrastCheck,DuplicateSpeakableTextCheck" />

    <ImageButton
        android:id="@+id/parkButton"
        android:layout_width="49dp"
        android:layout_height="48dp"
        android:layout_below="@+id/up_toolbar"
        android:layout_marginStart="170dp"
        android:layout_marginTop="40dp"
        android:background="@color/teal_700"
        android:contentDescription="@string/prkButt"
        app:srcCompat="@mipmap/ic_park_foreground"
        tools:ignore="ImageContrastCheck,DuplicateSpeakableTextCheck" />

    <RatingBar
        android:id="@+id/ratingFilter"
        android:isIndicator="false"
        style="@android:style/Widget.DeviceDefault.Light.RatingBar.Indicator"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/up_toolbar"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="6dp"
        android:layout_toEndOf="@+id/parkButton"
        android:contentDescription="@string/ratingStars" />

    <Button
        android:id="@+id/newReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gymButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:text="@string/review"
        android:theme="@style/Theme.Material3.DynamicColors.DayNight" />

    //ListView

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/newReview"
        android:layout_alignBottom="@+id/map_text"
        android:layout_marginBottom="80dp"
        tools:listitem="@layout/place_list" />



</RelativeLayout>